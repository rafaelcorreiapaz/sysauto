body {
    background-color: #ccc;
    font-family: "Lucida Grande", Verdana, Helvetica, sans-serif;
    font-size: 12px; color: #333;
    margin: 0px; padding: 10px;
}
.container {
    background-color: #fff;
    width: 800px; margin: 0 auto; padding: 10px;
}
.main {
    padding: 10px; color: #fff;
    background-color: #333;
}
 
/*formulario de cadastro*/
#form-cadastro form fieldset {
    width: 500px; border: none; padding-top: 25px;
}
#form-cadastro form legend { font-size: 16px; }
#form-cadastro form label {
    width: 100%; display: inline-block; margin-top: 5px;
}
#form-cadastro form input[type=text] {
    padding: 4px; border: #ccc solid 2px; width: 100%;
}
#form-cadastro form input[type=submit] {
    margin-top: 5px;
}